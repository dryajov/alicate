{
    "tags": {
        "allowUnknownTags": true
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "dateFormat": "ddd MMM Do YYYY",
        "outputSourceFiles": true,
        "outputSourcePath": true,
        "systemName": "alicatejs",
        "footer": "",
        "copyright": "Dmitriy Ryajov - alicatejs - MIT",
        "navType": "horizontal",
        "theme": "tommorow",
        "linenums": true,
        "collapseSymbols": false,
        "inverseNav": true,
        "highlightTutorialCode": true,
        "protocol": "fred://",
        "syntaxTheme": "dark"
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
    "source": {
        "include": ["app", "README.md"],
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "template": "node_modules/minami",
        "destination": "./docs/",
        "recurse": true
    }
}

